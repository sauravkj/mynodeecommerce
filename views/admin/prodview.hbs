<section>

    <div class="container">
      
<div class="row">
  <a href='/admin/addpro' class="btn btn-primary ml-auto">Add </a>
</div>
   <table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Owner</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">Picture</th>
    </tr>
  </thead>
  <tbody>

      {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.description}}</td>
      <td>{{this.category}}</td>
      <td>{{this.price}}</td>
      <td><img style="height=60px;width:60px" src="/images/prod_image/{{this._id}}.jpg" > </td>
      <td><a  class="btn btn-danger" href='/admin/editpro/{{this._id}}'>Edit</a> 
      <a  class="btn btn-primary" href='/admin/deletepro?id={{this._id}}&name=skj' onclick="return confirm('Delete {{this.Name}}')""> Delete</a> </td>
    </tr>
    {{/each}}
    
  </tbody>

  
</table>
</div>
</section>
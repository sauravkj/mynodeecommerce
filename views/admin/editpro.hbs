<section>
   

    <form action="/admin/editpro/{{product._id}}" enctype="multipart/form-data" method="post" class="form-control">
  <div class="form-group">
    <label for="e">Product name</label>
    <input type="text" name="Name" class="form-control" value="{{product.Name}}"  >
 </div>

  <div class="form-group">
    <label>Product description</label>
    <input type="text" name="description" class="form-control"value="{{product.description}}" >
  </div>

  <div class="form-group">
    <label>Product category</label>
    <input type="text" name="category" class="form-control" value="{{product.category}}" >
  </div>
   
   <div class="form-group">
    <label>Product price</label>
    <input type="number" name="price" class="form-control"value="{{product.price}}" >
  </div>
  
  <div class="form-group">
    <label>Image</label>
   <img src="/images/prod_image/{{product._id}}.jpg" style="width:100px;height:auto" id="piv">
   <input type="file" name="image" onchange="view(event)" >
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>

</section>

<script>
 function view(event){

 document.getElementById('piv').src=URL.createObjectURL(event.taret.files[0])

 }

</script>